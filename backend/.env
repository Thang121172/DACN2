# ========== DJANGO CORE CONFIG ==========
DEBUG=True
DJANGO_SECRET_KEY=your-very-secret-key-please-change-this

# === Allowed hosts ===
# Cho phép Django chạy trên localhost, IP LAN và domain tuỳ chọn
ALLOWED_HOSTS=127.0.0.1,localhost,0.0.0.0

# ========== DATABASE (PostgreSQL) ==========
# Các thông tin này phải trùng với cấu hình trong docker-compose hoặc máy Postgres của bạn
POSTGRES_DB=fastfood
POSTGRES_USER=app
POSTGRES_PASSWORD=123456
POSTGRES_HOST=127.0.0.1
POSTGRES_PORT=5433

# Nếu bạn chạy DB bằng Docker, đổi host thành tên service trong docker-compose.yml
# POSTGRES_HOST=db

# ========== EMAIL ==========
# Nếu bạn test bằng MailHog, để nguyên phần này
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=127.0.0.1
EMAIL_PORT=1025
EMAIL_USE_TLS=False
EMAIL_HOST_USER=
EMAIL_HOST_PASSWORD=

# ========== CORS (Frontend) ==========
# Cho phép các domain FE truy cập vào API
# Nếu bạn chạy Vite: http://localhost:5173
CORS_ORIGINS=http://localhost:5173,http://localhost:5174

# ========== JWT (SimpleJWT) ==========
# Thời gian sống token
ACCESS_TOKEN_LIFETIME_MINUTES=60
REFRESH_TOKEN_LIFETIME_DAYS=7

# ========== STATIC / MEDIA ==========
STATIC_URL=/static/
MEDIA_URL=/media/

# ========== OPTIONAL DEBUG LOGGING ==========
# Bật logging request.body cho /api/accounts/*
ENABLE_REQUEST_LOGGER=True
